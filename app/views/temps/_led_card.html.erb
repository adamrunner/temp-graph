<div class="card">
  <div class="card-block">
    <h4 class="card-title">LED Control</h4>
    <form id="ledForm" class="mqttForm">
      <div class="form-group">
        <label for="ledValue">Brightness</label>
        <input type="hidden" name="mqttTopic" class="mqttTopic" value="LED">
        <input type="range" min="0" max="1024" value="50" id="ledValue" class="mqttMessage"
        	step="1" oninput="outputUpdate(value)">
        <output for="ledValue" id="outputLedValue">50</output>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<div class="card">
  <div class="card-block">
    <h4 class="card-title">Power Supply Control</h4>
    <form id="psuForm" class="mqttForm">
      <input type="hidden" name="mqttTopic" class="mqttTopic" value="PSU">
      <div class="custom-controls-stacked">
        <label class="custom-control custom-radio">
          <input class="mqttMessage custom-control-input" type="radio" name="mqttMessage" value="0">
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">Off</span>
        </label>
        <label class="custom-control custom-radio">
          <input class="mqttMessage custom-control-input" type="radio" name="mqttMessage" value="1">
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">On</span>
        </label>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

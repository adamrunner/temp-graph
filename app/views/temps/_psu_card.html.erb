<div class="card">
  <div class="card-block">
    <h4 class="card-title">Power Supply Control</h4>
    <form id="psuForm" class="mqttForm">
      <input type="hidden" name="mqttTopic" class="mqttTopic" value="PSU">
      <div class="custom-controls-stacked">
        <label class="custom-control custom-radio">
          <%= radio_button_tag 'mqttMessage', '0', device.off?, class: "mqttMessage custom-control-input" %>
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">Off</span>
        </label>
        <label class="custom-control custom-radio">
          <%= radio_button_tag 'mqttMessage', '1', device.on?, class: "mqttMessage custom-control-input" %>
          <span class="custom-control-indicator"></span>
          <span class="custom-control-description">On</span>
        </label>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>
